---
import ProjectCard from "../components/ProjectCard.astro";
import Layout from "../layouts/Layout.astro";

export const prerender = true;
---

<Layout
  title="I'm LukaDev"
  description="I'm a Full-Stack Web Developer and Roblox Scripter based in Belgium."
  social={{
    title: "I'm LukaDev",
    type: "website",
    url: "https://lukadev.me",
  }}
>
  <section class="py-32">
    <div id="hero">
      <h1 class="text-4xl sm:text-6xl font-bold mb-4">
        Hey!<br />
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-fuchsia-400"
        >
          I'm LukaDev
        </span>
      </h1>

      <p class="text-neutral-400 text-lg max-w-xs sm:text-xl sm:max-w-md">
        I'm a Full-Stack Web Developer and Roblox Scripter based in Belgium.
      </p>
    </div>
  </section>

  <section class="mb-16" id="projects">
    <h2 class="text-3xl font-semibold mb-4">My Projects</h2>
    <ul class="grid grid-cols-1 sm:grid-cols-2 gap-4">
      <li>
        <ProjectCard
          name="Random Quote Machine"
          href="https://lukadev-randomquotes.vercel.app/"
        >
