        <div
          class="group h-full transition rounded-md border-2 border-neutral-800 hover:border-sky-700 focus-within:border-sky-700 focus-within:ring-4 ring-sky-600/10 overflow-hidden relative min-h-[120px] shadow-sky-600/20"
        >
          <a
            href="https://github.com/lukadev-0?tab=repositories"
            class="absolute inset-0 flex items-center justify-center font-medium p-4"
            target="_blank"
            rel="noopener noreferrer"
          >
            View more on GitHub

            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6 ml-2 text-gray-400 group-hover:translate-x-1 transition"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"></path>
            </svg>
          </a>
        </div>
      </li>
    </ul>
  </section>

  <script>
    import gsap from "gsap";

    gsap
      .timeline()
      .from("#hero > *", {
        opacity: 0,
        y: "+=8",
        stagger: 0.1,
      })
      .from("#projects h2", { opacity: 0, y: "+=16" })
      .from(
        "#projects ul > *",
        { opacity: 0, stagger: 0.1, y: "+=8" },
        "<+=0.2"
      );
  </script>
</Layout>
